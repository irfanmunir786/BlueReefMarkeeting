@model SendEmail
@{
    ViewData["Title"] = "AddContactUsData";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddContactUsData</h1>



<form class="" method="post" asp-controller="Email" asp-action="AddContactUsData" id="formvalidation">
    <div class="row pt-4">
        <div class="col-12 text-white">
            <div class="row">
                <div class="form-group col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12"> 
                    <input class="w-100" placeholder="Full Name" style="background-color:black;height:50px" asp-for="Name"  required  />
                </div>
                <div class="form-group col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <input class="w-100" placeholder="Email" style="background-color:black;height:50px" asp-for="Email" required />
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12 text-white">
            <div class="row">
                <div class="form-group col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <input class="w-100" placeholder="Contact Number" style="background-color:black;height:50px" asp-for="MobilePhone" />
                </div>
                <div class="form-group col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <input class="w-100" placeholder="Subject" style="background-color:black;height:50px" required  asp-for="Subject"/>
                </div>
            </div>
        </div>
    </div>

    <div class="row pt-4">
        <div class="col-12 text-white">
            <div class="row">
                <div class="form-group col-12">
                    <textarea class="w-100" placeholder="type a message" style="background-color:black" rows="10" asp-for="Message" required></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12 text-white">
            <div class="row">
